<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.jhta.planit.accomQna.mybatis.AccomQnaMapper">
	<insert id="insert" parameterType="hashmap">
		insert into accomQna 
		values(accomQna_num_seq.nextval,#{mem_id},#{accomqna_title},#{accomqna_content},sysdate,#{accom_num}) 
	</insert>
	<select id="list" parameterType="hashmap" resultType="com.jhta.planit.accomQna.vo.AccomQnaVo">
		select * from(
			select acq.*,rownum rnum from(
			select * from accomqna
			order by accomqna_num desc 
			)acq
		)
		<![CDATA[where rnum>=#{startRow} and rnum<=#{endRow}]]>
	</select>
</mapper>
