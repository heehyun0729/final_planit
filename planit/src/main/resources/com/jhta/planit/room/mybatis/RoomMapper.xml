<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.jhta.planit.room.mybatis.RoomMapper">
	<insert id="insert" parameterType="com.jhta.planit.room.vo.RoomVo">
		insert into room values(room_SEQ.nextval,#{accom_num},#{room_type},#{room_price},#{room_comm},0,1)
	</insert>
	<insert id="insert1" parameterType="com.jhta.planit.room.vo.RoomVo">
		insert into room values(room_SEQ.nextval,#{accom_num},#{room_type},#{room_price},#{room_comm},0,2)
	</insert>
	<insert id="insert2" parameterType="com.jhta.planit.room.vo.RoomVo">
		insert into room values(room_SEQ.nextval,#{accom_num},#{room_type},#{room_price},#{room_comm},0,3)
	</insert>
	<insert id="insert3" parameterType="com.jhta.planit.room.vo.RoomVo">
		insert into room values(room_SEQ.nextval,#{accom_num},#{room_type},#{room_price},#{room_comm},0,5)
	</insert>
	<select id="getRoomNum" resultType="int" >
  		select max(room_num) from room
  	</select>
	<select id="list" parameterType="int" resultType="com.jhta.planit.room.vo.RoomVo" >
  		select * from room where accom_num = #{accom_num} and roomChk=0
  	</select>
  	<update id="updateRoomCheck" parameterType="int">
		update room set
		roomChk=1 where room_num=#{room_num}
	</update>
</mapper>
