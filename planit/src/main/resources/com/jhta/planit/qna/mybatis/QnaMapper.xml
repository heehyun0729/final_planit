<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.jhta.planit.mypatis.QnaMapper">
	<select id="list" parameterType="hashmap" resultType="com.jhta.planit.qna.vo">
		select * from(
		select qa.*,rownum rnum from(
		select * from qna
		<include refid="search"/>
		order by num desc
		)qa
		)
		<![CDATA[where rnum>=#{startRow} and rnum<=#{endRow}]]>
	</select>  
	<insert id="insert" parameterType="com.jhta.planit.qna.vo">
		into into qna
		values(qna_num_seq.nextval,#{qna_cate},#{qna_title},#{qna.content},sysdate) 
	</insert>
</mapper>