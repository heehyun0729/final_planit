<mapper namespace="com.jhta.planit.qna.mybatis.QnaCommMapper">
	<insert id="insert" parameterType="com.jhta.planit.qna.vo.QnaCommVo">
		insert into qnacomm(qcomm_num,mem_id,qcomm_content,qna_num)
		values(qcomm_num_seq.NEXTVAL,#{mem_id},#{qcomm_content},#{qna_num})
	</insert>
